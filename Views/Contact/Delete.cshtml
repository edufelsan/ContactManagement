@model ContactModel

<h3>Delete Contact</h3>

<div>
    <h4>Are you sure you want to delete this contact?</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Contact:</dt>
        <dd class="col-sm-10">@Model.Contact</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
    <form asp-action="Delete" asp-controller="Contact" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Confirm" class="btn btn-danger" />
            <a asp-action="Index" asp-controller="Contact" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
